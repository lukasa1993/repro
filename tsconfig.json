{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "useDefineForClassFields": true,
    "module": "Preserve",
    "types": ["vitest/globals"],
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true
  }
}
